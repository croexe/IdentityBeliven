{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "@mt = 'An unhandled exception has occurred while executing the request.'"
        }
      }
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5168/" }
      }
    ]
  },
  "ConnectionStrings": { "Default": "Data Source=DESKTOP-FC6TTT7;Initial Catalog=TaskManagerDB;Integrated Security=True" },
  "JWT": {
    "ValidAudience": "http://localhost:5168/",
    "ValidIssuer": "http://localhost:5168/",
    "Secret": "66C49114-B57F-4985-A404-3FAE9656EC07"
  },
  "Mailer": {
    "Port": "587",
    "Host": "192.168.0.1",
    "Password": "EmailPassword"
  }
}